@model ContractSystem_Blogic.Models.Client

@{
    ViewData["Title"] = "Create";
}

<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 style="color:orangered">Add New Client</h2>

            @if (ViewData["CreateFlag"] != null)
            {
                <div style="padding:5px; margin-bottom:10px;" class="alert-danger view-data">
                    @ViewData["CreateFlag"]
                </div>
            }

            <form asp-action="CreateClient" method="post" enctype="multipart/form-data">
                
                @Html.Partial("_CUClientForm")

                <div style="margin-top:10px;" class="form-group text-center">
                    <button type="submit" class="btn btn-orange">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>
