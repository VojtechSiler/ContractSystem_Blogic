@using ContractSystem_Blogic.Models
@model List<Consultant>
@{
}

<h2 style="color:orangered">Consultant Database</h2>

<div class="row justify-content-between">
    <div class="col-lg-6 my-2">
        @Html.Partial("_SearchPartial")
    </div>
    <div class="col-lg-4 d-flex flex-row-reverse my-2">
        <a asp-action="CreateConsultant" class="btn btn-orange col-5"><i class="fa-solid fa-plus"></i> New Consultant</a>
        <a asp-action="ExportConsultantsToCSV" class="btn btn-orange-two col-3"><i class="fa-solid fa-file-export"></i> Export</a>
    </div>
</div>


<div>
    <table class="table table-striped border">
        <tr class="table-responsive">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>ID</th>
            <th>Age</th>
            <th></th>

        </tr>
        @foreach (var consultant in Model)
        {
            <tr class="tr-clients" onclick="location.href='@Url.Action("ConsultantDetail", "Consultant", new { consultantId = consultant.Id })';">
                <td>
                    @consultant.FirstName
                </td>
                <td>
                    @consultant.LastName
                </td>
                <td>
                    @consultant.Email
                </td>
                <td>
                    @consultant.PhoneNumber
                </td>
                <td>
                    @consultant.IdentificationNumber
                </td>
                <td>
                    @consultant.Age
                <td>
                </td>

                </td>
            </tr>
        }
    </table>
</div>

<script>
    // Get all the table rows
    var rows = document.querySelectorAll("tr");

    // Attach a click event handler to each row
    rows.forEach(function (row) {
        row.addEventListener("click", function () {
            // Get the URL from the data attribute and redirect
            var url = this.getAttribute("data-url");
            if (url) {
                location.href = url;
            }
        });
    });
</script>