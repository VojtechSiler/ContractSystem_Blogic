@model ContractSystem_Blogic.Models.Institution

@{
    ViewData["Title"] = "Edit";
}

<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 style="color:orangered">Update Institution</h2>

            @if (ViewData["CreateFlag"] != null)
            {
                <div style="padding:5px; margin-bottom:10px;" class="alert-danger view-data">
                    @ViewData["CreateFlag"]
                </div>
            }

            <form asp-action="UpdateInstitution" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Name">Institution Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div style="margin-top:10px;" class="form-group text-center">
                    <button type="submit" class="btn btn-orange">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>